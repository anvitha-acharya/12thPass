<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>12thPass Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .dark-mode {
            background-color: #121212;
            color: #ffffff;
        }
        .high-contrast-mode {
            background-color: #000000;
            color: #ffff00;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" aria-label="12thPass Home">12thPass</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#features" aria-label="Go to Features section">Features</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact" aria-label="Go to Contact section">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <h1 class="text-center" aria-label="Welcome to 12thPass Portal">Welcome to 12thPass Portal</h1>
        <p class="text-center">Simplifying the exam preparation journey for students with disabilities.</p>

        <div class="text-center mb-4">
            <button id="tts-btn" class="btn btn-secondary" aria-label="Listen to this page">Listen</button>
            <a href="/dashboard" class="btn btn-primary" aria-label="Get Started with 12thPass">Get Started</a>
        </div>

        <div class="d-flex justify-content-between mb-3">
            <div>
                <label for="font-size" class="me-2">Adjust Font Size:</label>
                <input type="range" id="font-size" min="14" max="24" value="16" aria-label="Adjust font size">
            </div>
            <div>
                <label for="contrast-mode" class="me-2">Theme:</label>
                <select id="contrast-mode" class="form-select" aria-label="Select theme" style="width: auto;">
                    <option value="default">Default</option>
                    <option value="dark">Dark</option>
                    <option value="high-contrast">High Contrast</option>
                </select>
            </div>
        </div>
    </div>

    <div class="container">
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Enter Your Name</label>
                <div class="input-group">
                    <input type="text" id="name" class="form-control" placeholder="Your Name" aria-label="Enter your name">
                    <button id="stt-btn" class="btn btn-secondary" type="button" aria-label="Start voice input">ðŸŽ¤</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // Text-to-Speech
        const ttsButton = document.getElementById('tts-btn');
        ttsButton.addEventListener('click', () => {
            const textToRead = document.body.innerText;
            const speech = new SpeechSynthesisUtterance(textToRead);
            speech.lang = 'en-US';
            window.speechSynthesis.speak(speech);
        });

        // Speech-to-Text
        const sttButton = document.getElementById('stt-btn');
        const nameInput = document.getElementById('name');
        sttButton.addEventListener('click', () => {
            const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
            recognition.lang = 'en-US';
            recognition.start();
            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                nameInput.value = transcript;
            };
            recognition.onerror = (err) => alert('Speech recognition error: ' + err.error);
        });

        // Font Size Adjustment
        const fontSizeSlider = document.getElementById('font-size');
        fontSizeSlider.addEventListener('input', () => {
            document.body.style.fontSize = fontSizeSlider.value + 'px';
        });

        // Color Contrast Adjustment
        const contrastMode = document.getElementById('contrast-mode');
        contrastMode.addEventListener('change', () => {
            const mode = contrastMode.value;
            document.body.className = ''; // Reset classes
            if (mode === 'dark') document.body.classList.add('dark-mode');
            if (mode === 'high-contrast') document.body.classList.add('high-contrast-mode');
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
