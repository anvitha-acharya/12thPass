<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learn</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">12th Pass</a>
            <nav class="ms-auto">
                <a href="/" class="btn btn-outline-primary">Home</a>
                <a href="/learn" class="btn btn-primary">Learn</a>
                <a href="/mock-tests" class="btn btn-outline-primary">Mock Tests</a>
                <a href="/application" class="btn btn-outline-primary">Application</a>
            </nav>
        </div>
    </header>

    <main class="container my-4 d-flex">
        <!-- Left Side: Courses List -->
        <div class="courses-section w-75 me-4">
            <form method="GET" action="/learn" class="d-flex mb-3">
                <input 
                    type="text" 
                    name="search" 
                    class="form-control me-2" 
                    placeholder="Search courses..." 
                    value="<%= search %>">
                <select name="filter" class="form-select" style="width: 150px;">
                    <option value="" <%= filter === '' ? 'selected' : '' %>>All Subjects</option>
                    <option value="physics" <%= filter === 'physics' ? 'selected' : '' %>>Physics</option>
                    <option value="mathematics" <%= filter === 'mathematics' ? 'selected' : '' %>>Mathematics</option>
                    <option value="biology" <%= filter === 'biology' ? 'selected' : '' %>>Biology</option>
                    <option value="computer science" <%= filter === 'computer science' ? 'selected' : '' %>>Computer Science</option>
                    <option value="economics" <%= filter === 'economics' ? 'selected' : '' %>>Economics</option>
                </select>
                <button type="submit" class="btn btn-primary ms-2">Search</button>
            </form>
    
            <div class="row">
                <% if (courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <div class="col-md-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= course.name %></h5>
                                    <p class="card-text"><%= course.short_description || 'No description available.' %></p>
                                    <a href="/course/<%= course.id %>" class="btn btn-primary" target="_blank">Learn More</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No courses available for the selected filters. Please try again later.</p>
                <% } %>
            </div>
        </div>
    <!-- Right Side: Progress Tracker -->
        <div class="progress-section w-25">
            <h4>Progress Tracker</h4>
            <ul class="list-group">
                <li class="list-group-item">Physics: <span class="badge bg-success">80%</span></li>
                <li class="list-group-item">Mathematics: <span class="badge bg-warning">50%</span></li>
                <li class="list-group-item">Biology: <span class="badge bg-danger">20%</span></li>
                <li class="list-group-item">Chemistry: <span class="badge bg-info">65%</span></li>
            </ul>
        </div>
    </main>
    
    
</body>
</html>
